<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BookStore</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <a class="navbar-brand" asp-controller="Home" asp-action="Index">BookStore</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <!-- LEFT SIDE NAV -->
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Book" asp-action="Index">Shop Books</a>
                    </li>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index">My Cart</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Order" asp-action="MyOrders">My Orders</a>
                        </li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Admin Panel
                            </a>

                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="AdminBook" asp-action="Index">Manage Books</a></li>
                                <li><a class="dropdown-item" asp-controller="AdminCategory" asp-action="Index">Manage Categories</a></li>
                                <li><a class="dropdown-item" asp-controller="AdminOrder" asp-action="Index">Manage Orders</a></li>
                                <li><a class="dropdown-item" asp-controller="AdminStats" asp-action="Index">Statistics</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <!-- RIGHT SIDE NAV -->
                <ul class="navbar-nav">

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        var email = User.FindFirst("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress")?.Value;

                        <li class="nav-item">
                            <a class="nav-link text-white me-3" asp-controller="Account" asp-action="Profile">Profile</a>
                        </li>

                        <li class="nav-item">
                            <span class="navbar-text text-white me-3">@email</span>
                        </li>

                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button class="btn btn-sm btn-danger">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>





            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>