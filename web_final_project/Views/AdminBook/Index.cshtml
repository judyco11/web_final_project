@model IEnumerable<OnlineBookStore.Models.Book>

<h2 class="mt-4 mb-3">Manage Books</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add New Book</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Cover</th> <!-- NEW -->
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th width="180"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <!-- COVER IMAGE -->
                <td>
                    @if (!string.IsNullOrEmpty(b.CoverImageUrl))
                    {
                        <img src="@b.CoverImageUrl" alt="@b.Title" width="80" />
                    }
                    else
                    {
                        <span class="text-muted">No Image</span>
                    }
                </td>

                <td>@b.Title</td>
                <td>@b.Author</td>
                <td>@b.Category?.Name</td>
                <td>@b.Price.ToString("C")</td>
                <td>@b.Stock</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@b.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@b.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
