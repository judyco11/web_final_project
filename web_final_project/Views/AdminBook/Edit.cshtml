@model OnlineBookStore.Models.Book

<h2 class="mt-4 mb-3">Edit Book</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-6">

            <div class="mb-3">
                <label class="form-label">Title</label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Author</label>
                <input asp-for="Author" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Price</label>
                <input asp-for="Price" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Stock</label>
                <input asp-for="Stock" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Edition</label>
                <input asp-for="Edition" class="form-control" />
            </div>

            <!-- CURRENT COVER IMAGE -->
            <div class="mb-3">
                <label class="form-label">Current Cover</label><br />
                @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                {
                    <img src="@Model.CoverImageUrl" alt="@Model.Title" width="120" />
                }
                else
                {
                    <span class="text-muted">No image uploaded</span>
                }
            </div>

            
            <div class="mb-3">
                <label class="form-label">Upload New Cover (optional)</label>
                <input type="file" name="coverFile" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Category</label>
                <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"></select>
            </div>

            <button class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>

        </div>
    </div>
</form>
