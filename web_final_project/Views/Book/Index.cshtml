@model IEnumerable<OnlineBookStors.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<div class="container mt-4">
    <h2>Books</h2>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card h-100 shadow-sm">
                    <img src="@book.CoverImage" class="card-img-top" style="height:200px; object-fit:cover;" />
                    <div class="card-body">
                        <h5>@book.Title</h5>
                        <p class="text-muted">@book.Author</p>
                        <p><strong>@book.Price $</strong></p>
                        <a href="/Books/Details/@book.Id" class="btn btn-primary btn-sm">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

