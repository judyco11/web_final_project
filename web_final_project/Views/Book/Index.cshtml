@model IEnumerable<web_final_project.Models.Book>
@{
    ViewData["Title"] = "Books";
}
<h1>Books</h1>
<p><a class="btn btn-success" href="/Book/Create">Create New Book</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Title</td>
                <td>@b.Author</td>
                <td>@b.Category?.Name</td>
                <td>$@b.Price</td>
                <td>@b.Stock</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Book/Details/@b.BookId">Details</a>
                    <a class="btn btn-warning btn-sm" href="/Book/Edit/@b.BookId">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Book/Delete/@b.BookId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

