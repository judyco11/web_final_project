@model IEnumerable<OnlineBookStore.Models.Book>

@{
    ViewData["Title"] = "Shop Books";
}

<h2>Shop Books</h2>

<!-- 🔹 Search / Filter Form goes here, right under the page title -->
<form method="get" class="mb-3">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Search books..." class="form-control mb-2" />
    
    <select name="categoryId" class="form-select mb-2">
        <option value="">All Categories</option>
        @foreach (var category in ViewBag.Categories)
        {
            <option value="@category.Id" selected="@(category.Id == ViewBag.SelectedCategoryId ? "selected" : null)">
                @category.Name
            </option>
        }
    </select>


    <select name="sort" class="form-select mb-2">
        <option value="">Sort by Title</option>
        <option value="price_asc" selected="@(ViewBag.Sort == "price_asc" ? "selected" : null)">Price ↑</option>
        <option value="price_desc" selected="@(ViewBag.Sort == "price_desc" ? "selected" : null)">Price ↓</option>
        <option value="popular" selected="@(ViewBag.Sort == "popular" ? "selected" : null)">Most Popular</option>
    </select>


    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<!-- 🔹 Books grid -->
<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100 p-2">
                <img src="@book.CoverImageUrl" class="card-img-top" alt="@book.Title" />
                <div class="card-body">
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text">Author: @book.Author</p>
                    <p class="card-text">Price: $@book.Price</p>
                    <p class="card-text">Stock: @book.Stock</p>
                </div>
                <div class="card-footer">
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary btn-sm">View Details</a>
                    <form asp-controller="Cart" asp-action="Add" method="post" style="display:inline">
                        <input type="hidden" name="bookId" value="@book.Id" />
                        <div class="input-group" style="max-width: 120px;">
                            <input type="number" name="quantity" value="1" min="1" max="@book.Stock" class="form-control" />
                            <button type="submit" class="btn btn-success btn-sm" @(book.Stock == 0 ? "disabled" : "")>Add to Cart</button>
                        </div>
                    </form>
                    @if (book.Stock == 0)
                    {
                        <span class="text-danger">Out of stock</span>
                    }


                </div>
            </div>
        </div>
    }
</div>
