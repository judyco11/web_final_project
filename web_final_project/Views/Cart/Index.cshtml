@model web_final_project.Models.Cart
<h1>Your Cart</h1>
@if (Model?.CartItems != null && Model.CartItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Book</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Book?.Title</td>
                    <td>@item.Quantity</td>
                    <td>$@item.Book?.Price</td>
                    <td>$@(item.Quantity* item.Book?.Price ?? 0)</td>
                    <td>
                        <form asp-controller="CartItem" asp-action="Remove" method="post">
                            <input type="hidden" name="id" value="@item.CartItemId" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-success" href="/Order/Index">Checkout</a>
}
else
{
    <p>Your cart is empty.</p>
}
