@model IEnumerable<OnlineBookStore.Models.CartItem>

@{
    ViewData["Title"] = "My Cart";
}

<h2 class="mt-4 mb-3">My Cart</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Your cart is empty.</div>
    <a asp-controller="Book" asp-action="Index" class="btn btn-primary">Shop Books</a>
}
else
{
    <table class="table table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Book</th>
                <th>Price</th>
                <th width="120">Quantity</th>
                <th>Total</th>
                <th width="120"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@item.Book?.Title</td>
                    <td>@item.Book?.Price.ToString("C")</td>
                   


                    <td>
                        <form asp-action="Update" method="post" class="d-flex">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control" />
                            <button class="btn btn-sm btn-success ms-2">Save</button>
                        </form>
                    </td>

                    <td>@((item.Quantity * (item.Book?.Price ?? 0)).ToString("C"))</td>

                    <td>
                        <form asp-action="Remove" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button class="btn btn-sm btn-danger w-100">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-controller="Order" asp-action="Checkout" method="post">
        <button class="btn btn-primary btn-lg">Proceed to Checkout</button>
    </form>
}

